<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Admin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#7CADBC"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <Button
        android:id="@+id/addstaffBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD STAFF"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#A34343"/>

    <Button
        android:id="@+id/addstokBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD STOK"
        android:backgroundTint="#A2988E"/>

    <Button
        android:id="@+id/logoutadmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="50dp"/>


</LinearLayout>